<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.esdihumboldt.hale.io.haleconnect.ui.login"
            name="Login to hale connect">
      </command>
      <command
            id="eu.esdihumboldt.hale.io.haleconnect.ui.logout"
            name="Logout and clear credentials">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:file?after=HALE.separator1">
         <command
               commandId="eu.esdihumboldt.hale.io.haleconnect.ui.login"
               id="haleconnectLogin"
               label="Login to hale connect..."
               style="push">
         </command>
         <command
               commandId="eu.esdihumboldt.hale.io.haleconnect.ui.logout"
               id="haleconnectClearCredentials"
               label="Logout and clear credentials"
               style="push">
         </command>
         <separator
               name="eu.esdihumboldt.hale.io.haleconnect.ui.separator1"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.esdihumboldt.hale.io.haleconnect.ui.HaleConnectLoginHandler"
            commandId="eu.esdihumboldt.hale.io.haleconnect.ui.login">
         <activeWhen>
            <with
                  variable="eu.esdihumboldt.hale.io.haleconnect.ui.login.status">
               <equals
                     value="false">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="eu.esdihumboldt.hale.io.haleconnect.ui.HaleConnectLogoutHandler"
            commandId="eu.esdihumboldt.hale.io.haleconnect.ui.logout">
         <activeWhen>
            <with
                  variable="eu.esdihumboldt.hale.io.haleconnect.ui.login.status">
               <equals
                     value="true">
               </equals>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="eu.esdihumboldt.hale.io.haleconnect.ui.internal.HaleConnectSource">
         <variable
               name="eu.esdihumboldt.hale.io.haleconnect.ui.login.status"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="eu.esdihumboldt.hale.io.haleconnect.ui.preferences.HaleConnectPreferencePage"
            id="eu.esdihumboldt.hale.io.haleconnect.ui.preferences.main"
            name="hale connect">
      </page>
      <page
            category="eu.esdihumboldt.hale.io.haleconnect.ui.preferences.main"
            class="eu.esdihumboldt.hale.io.haleconnect.ui.preferences.HaleConnectExtendedPreferencePage"
            id="eu.esdihumboldt.hale.io.haleconnect.ui.preferences.extended"
            name="Extended">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="eu.esdihumboldt.hale.io.haleconnect.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
